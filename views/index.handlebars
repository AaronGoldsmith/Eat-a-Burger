<div class="container-fluid px-4 mt-2">
<h1 class='text-center text-light'>Eat a burger!</h1>



<div class="row mt-4 d-flex justify-content-center options">
    <div class="card mx-4 p-4 bg-dark"><div class="card-body ">
      <button type="button" class="btn btn-info mr-5">View available burgers</button>
      <button type="button" class="btn btn-info mx-2">View the eaten burgers</button>
      <button type="button" class="btn btn-info ml-5">Create a new burger</button>
    </div></div>
   
   <div class="col-lg-6" id="left">

   <h2 class="my-4" id='caption'>Click on a &nbsp;🍔&nbsp;  to consume it</h2>
   <ul class="d-flex justify-content-center">
    {{#each burger}}
    {{#unless devoured}}
      <div class="mx-4 ">
       
      <li class="badge-light badge">
        <button class="devour badge mt-2 d-inline "
                data-id={{ID}}>🍔
        </button>
        <h5 class="burger">
          {{burger_name}}
        </h5>  
      </li>
      </div>
    {{/unless}}
    {{/each}}
  </ul>
  </div>
  <div class="col-md-6" id="right">
  <h2 class="my-4">Burgers that have been devoured!</h2>

  <ul >
    {{#each burger}}
    {{#if devoured}}
        <li><h3 class='burger px-2'>{{burger_name}}</h3></li>
    {{/if}}
    {{/each}}
  </ul>

  </div>
</div>
<div class=" mt-5 text-light text-center">
  <h3 class="mb-3">Add a burger</h3>
  <form class="create-form">

    <div class="form-group">
      <label for="bn">Burger Name:</label><br>
      <input type="text" id="bn" class="rounded" name="name">
    </div>

  <button class="btn btn-primary" type="submit">Add Burger</button>
</form>
</div>
</div>
