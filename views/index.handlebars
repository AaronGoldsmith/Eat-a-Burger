
<h1 class='text-light mb-5'>Eat a burger!</h1>

<div class="row mx-auto d-flex justify-content-center w-100">
    <div class=" text-light">
      <form class="create-form">
        <div class="form-group">
          <input type="text" id="bn" class="rounded pb-1 pl-2 mx-3" name="name" placeholder="Name of Burger">
          <button class="btn btn-primary" type="submit">Add to menu</button>
        </div>
      </form>
    </div>
</div>


<div class="container-fluid px-4 mt-2">

<div class="row d-flex justify-content-center options">
    <div class="card mx-lg-4 p-lg-4 ds">
      <div class="card-body ">
      <button type="button" class="available btn btn-info mr-5">View available burgers</button>
      <button type="button" class="eaten btn btn-info mx-2">View the eaten burgers</button>
      <button type="button" class="btn btn-info ml-5">Create a new burger</button>
    </div>
   </div>
   
   <div class="col-lg-6 my-5" id="left">

   <h2 id='caption'>Click a <span id="tiny">&nbsp;🍔&nbsp;</span>  to consume it</h2>
   <ul class="d-flex p-4 justify-content-center">
    {{#each burger}}
    {{#unless devoured}}
      <div class="mx-4 burgers">
       
      <li class="badge-white badge">
        <button class="devour badge mt-2 d-inline "
                data-id={{ID}}>🍔
        </button>
        <h5 class="burger text-light">
          {{burger_name}}
        </h5>  
      </li>
      </div>
    {{/unless}}
    {{/each}}
  </ul>
  </div>
  <div class="col-lg-11" id="right">
  <h2 class="pb-3 my-4">Burgers that have been devoured!</h2>

  <ul class="devoured_wrap" >
    {{#each burger}}
    {{#if devoured}}
        <li class="burgerli">
          <span class="mt-3">Add back</span><div class="addback btn btn-primary" title="Add this item back to the menu" data-id={{ID}}>&plus;</div>
          <h3 class='burger'>{{burger_name}}</h3>
        </li>
    {{/if}}
    {{/each}}
  </ul>

  </div>
</div>

</div>
