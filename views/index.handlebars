
<h1 id="title" class='text-light float-left ml-2 mb-5'>Eat a burger!</h1>


<div class="options row d-flex justify-content-center ">
      <button type="button" class="available btn btn-info p-4 mx-5 mb-3">View available burgers</button>
      <button type="button" class="eaten btn btn-info p-4 mx-5 mb-3">View the eaten burgers</button>
      <button type="button" class="newburg btn btn-info p-4 mx-5 mb-3">Create a new burger</button>
</div>

    


  
  <div id="left" class='px-5'>

    <ul id="burger_container" class="pl-5 d-flex scroll p-5">
      {{#each burger}}
      {{#unless devoured}}
        
        <li class="badge-white mx-4  badge ">
          <button class="devour badge mt-2 "
                  data-id={{ID}}>🍔
          </button>
          <h5 class="burger text-light">
            {{burger_name}}
          </h5>  
        </li>
      {{/unless}}
      {{/each}}
    </ul>
      <h5 class="w-20 text-center" id='caption'>Click a <span id="tiny">&nbsp;🍔&nbsp;</span>  to consume it</h5>

  </div>
</div>
  <div class="col-lg-11" id="right">
  <h2 class="pb-3 my-4">Burgers that have been devoured!</h2>

  <ul class="devoured_wrap" >
    {{#each burger}}
    {{#if devoured}}
        <li class="burgerli">
          {{!-- <span class="mt-3">Add back</span><div class="addback btn btn-primary" title="Add this item back to the menu" data-id={{ID}}>&plus;</div> --}}
          <h3 class='burger'>{{burger_name}}</h3>
        </li>
    {{/if}}
    {{/each}}
  </ul>

  </div>    
  <div id="newburger" class="row mx-auto pt-4 w-100">
    <div class=" text-light">
      <form class="create-form">
        <div class="form-group">
          <input type="text" id="bn" class="rounded pb-1 pl-2 mx-3" name="name" placeholder="Name of Burger">
          <button class="btn btn-primary" type="submit">Add to menu</button>
        </div>
      </form>
    </div>
  </div>

</div>
