<div class="container-fluid px-4 mt-4">
<h1 class='text-center text-light'>Eat a burger!</h1>
<hr>

<div class="row bg-white border border-info">
   <div class="col-lg-6" id="left">

   <h2 class="my-4">Eat the burgers!</h2>

  <ul class="d-inline">
    {{#each burger}}
    {{#unless devoured}}
      <div class="mx-4">
       <button class="devour badge mt-2 d-inline badge-light"
                data-id={{ID}}>🍔
        </button>
      <li>
        <h5 class="burger">
          {{burger_name}}
        </h5>  
      </li>
      </div>
    {{/unless}}
    {{/each}}
  </ul>
  </div>
  <div class="col-md-6" id="right">
  <h2 class="my-4">Burgers that have been devoured!</h2>

  <ul >
    {{#each burger}}
    {{#if devoured}}
        <li><h3 class='burger px-2'>{{burger_name}}</h3></li>
    {{/if}}
    {{/each}}
  </ul>

  </div>
</div>
<div class=" mt-5 text-center">
  <h3 class="mb-3">Add a burger</h3>
  <form class="create-form">

    <div class="form-group">
      <label for="bn">Burger Name:</label><br>
      <input type="text" id="bn" class="rounded" name="name">
    </div>

  <button class="btn btn-primary" type="submit">Add Burger</button>
</form>
</div>
</div>
